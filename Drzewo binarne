#include <iostream>

using namespace std;

struct node {
    int data;
    node* left;
    node* right;
};
void add (int data, node*& tree){
    node* fresh = new node;
    fresh->data = data;
    fresh->left = NULL;
    fresh->right = NULL;
    if(tree != NULL){
        node* prev = tree;
        while(prev != NULL){
            if(fresh->data >= prev->data){
                if(prev->right == NULL){
                    prev->right = fresh;
                    break;
                }else{
                    prev = prev->right;
                }
            }else{
                if(prev->left == NULL){
                    prev->left = fresh;
                    break;
                }else{
                    prev = prev->left;
                }
            }
        }
    }else{
        tree = fresh;
    }
}
